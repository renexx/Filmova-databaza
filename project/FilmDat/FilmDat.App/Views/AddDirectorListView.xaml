<local:UserControlBase x:Class="FilmDat.App.Views.AddDirectorListView"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="clr-namespace:FilmDat.App.Views"
                       xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
                       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                       xmlns:texts="clr-namespace:FilmDat.App.Resources.Texts"
                       mc:Ignorable="d"
                       d:DesignHeight="450"
                       d:DesignWidth="800"
                       Background="LightGray"
                       d:DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=AddDirectorListViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="AddDirectorComboBox"
                  ItemsSource="{Binding AddDirectors}"
                  SelectedItem="{Binding AddSelectedDirector, Mode=TwoWay}"
                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                  materialDesign:HintAssist.Hint="{x:Static texts:AddDirectorListResource.Add_ComboBox}"
                  Grid.Column="0">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="SelectionChanged">
                    <b:InvokeCommandAction Command="{Binding AddDirectorSelectedCommand}"
                                           CommandParameter="{Binding ElementName=AddDirectorComboBox, Path=SelectedItem}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Grid ShowGridLines="False">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock HorizontalAlignment="Left" Grid.Column="0" Margin="0 0 5 0"
                                   Text="{Binding FirstName}" />
                        <TextBlock HorizontalAlignment="Left" Grid.Column="1" Text="{Binding LastName}" />
                    </Grid>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button
            Grid.Column="1"
            Margin="5"
            materialDesign:ButtonAssist.CornerRadius="15"
            Height="25"
            Width="50"
            Command="{Binding AddDirector}">
            <materialDesign:PackIcon Kind="Plus" Height="20" Width="20" />
        </Button>

        <ComboBox x:Name="DeleteDirectorComboBox"
                  ItemsSource="{Binding DeleteDirectors}"
                  SelectedItem="{Binding DeleteSelectedDirector, Mode=TwoWay}"
                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                  materialDesign:HintAssist.Hint="{x:Static texts:AddDirectorListResource.Delete_ComboBox}"
                  Grid.Column="2">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="SelectionChanged">
                    <b:InvokeCommandAction Command="{Binding DeleteDirectorSelectedCommand}"
                                           CommandParameter="{Binding ElementName=DeleteDirectorComboBox, Path=SelectedItem}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Grid ShowGridLines="False">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock HorizontalAlignment="Left" Grid.Column="0" Margin="0 0 5 0"
                                   Text="{Binding FirstName}" />
                        <TextBlock HorizontalAlignment="Left" Grid.Column="1" Text="{Binding LastName}" />
                    </Grid>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button
            Grid.Column="3"
            Margin="5"
            materialDesign:ButtonAssist.CornerRadius="15"
            Height="25"
            Width="50"
            Command="{Binding DeleteDirector}">
            <materialDesign:PackIcon Kind="Delete" />
        </Button>
    </Grid>
</local:UserControlBase>